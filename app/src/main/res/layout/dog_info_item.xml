<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/dog_list_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/no_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/dog_list_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginStart="@dimen/fab_margin"
        app:layout_constraintTop_toTopOf="@+id/dog_list_image"
        app:layout_constraintStart_toEndOf="@+id/dog_list_image"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Killer"
        />
    <TextView
        android:id="@+id/dog_list_personality"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginTop="@dimen/half_margin"
        app:layout_constraintStart_toEndOf="@+id/dog_list_image"
        app:layout_constraintTop_toBottomOf="@+id/dog_list_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="super playful"
        />
</androidx.constraintlayout.widget.ConstraintLayout>